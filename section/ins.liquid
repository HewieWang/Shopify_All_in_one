<script>
  window.addEventListener('load', function() {
    $('.instagram_list').slick({
      infinite: {{ section.settings.cycle }},
      speed: {{ section.settings.speed }},
      autoplay:{{ section.settings.autoplay }},
      slidesToShow:{{ section.settings.slidesToShowPC }},
      slidesToScroll:{{ section.settings.slidesToScrollPC }},
      prevArrow:$("span.instagram-pagination")[0],
      nextArrow:$("span.instagram-pagination")[1],
      responsive:[
        {
          breakpoint: 800,
          settings: {
            slidesToShow: {{ section.settings.slidesToShowMobile }},
            slidesToScroll: {{ section.settings.slidesToScrollMobile }}
          }
        },
        {
          breakpoint: 10,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });
  });
</script>
