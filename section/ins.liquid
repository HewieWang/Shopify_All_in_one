                  <div class="tw-flex tw-items-center tw-mb-3 last:tw-mb-0 tw-leading-none tw-text-[14px]">
                    <img style="margin-left: unset !important;margin-right: unset !important;" src="https://cdn.shopifycdn.net/s/files/1/0555/6351/8026/files/love.svg?v=1648516791">  
                    <span class="instagram_likes" style="margin-left:{{ block.settings.love_left }}">{{ block.settings.love }}</span>
                  </div>
                  <div class="instagram_text tw-leading-1.3 tw-overflow-hidden tw-overflow-ellipsis">{{ block.settings.des }}</div>
              </section>
            
          </li>
          {% endfor %}
      </ul>
    </div>
</div>
